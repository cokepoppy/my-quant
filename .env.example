# 开发环境配置文件模板
# 复制此文件为 .env 并填入实际值

# =============================================================================
# 数据库配置
# =============================================================================
POSTGRES_PASSWORD=quant123
REDIS_PASSWORD=redis123

# =============================================================================
# 应用安全配置
# =============================================================================
JWT_SECRET=super-secret-jwt-key-change-in-production
SESSION_SECRET=super-secret-session-key-change-in-production
ENCRYPTION_KEY=32-character-encryption-key-here

# =============================================================================
# API 配置
# =============================================================================
NODE_ENV=development
PORT=8000
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# 数据库连接
# =============================================================================
DATABASE_URL=postgresql://quant:${POSTGRES_PASSWORD}@localhost:5432/quant_trading
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=json

# =============================================================================
# 安全配置
# =============================================================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
SESSION_MAX_AGE=86400000

# =============================================================================
# 外部服务配置
# =============================================================================
EXCHANGE_API_KEY=your_exchange_api_key
EXCHANGE_API_SECRET=your_exchange_api_secret
DATA_PROVIDER_API_KEY=your_data_provider_api_key

# =============================================================================
# 监控和告警配置
# =============================================================================
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# 性能配置
# =============================================================================
MAX_CONNECTIONS=100
POOL_MIN=2
POOL_MAX=10
CACHE_TTL=3600

# =============================================================================
# 功能开关
# =============================================================================
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_PROFILING=false
ENABLE_DEBUG_LOGGING=true